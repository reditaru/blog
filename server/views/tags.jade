extends ./layout.jade

block title
    title Reditaru Tags

block content
    h1.ui.header 标签
    - var colors = ['red','orange','yellow','olive','green','teal','blue','violet','purple','pink','brown','grey','black'];
    each tag in tags
        - var color = colors[tag.id % colors.length]
        a.ui.label(class=color href="/tag/"+tag.id)=tag.name